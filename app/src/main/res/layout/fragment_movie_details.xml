<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FragmentMovieDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/movie_logo_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:contentDescription="@string/movie_logo"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_logo"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/mask"
            app:layout_constraintBottom_toBottomOf="@id/movie_logo_image"
            app:layout_constraintEnd_toEndOf="@id/movie_logo_image"
            app:layout_constraintStart_toStartOf="@id/movie_logo_image"
            app:layout_constraintTop_toTopOf="@id/movie_logo_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/movie_logo_image"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            android:text="13+" />

        <TextView
            android:id="@+id/movie_details_back_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            android:layout_marginTop="@dimen/spacing_4x"
            android:text="Back"
            android:textSize="@dimen/text_size_sub_title"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/spacing_4x" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/spacing_4x" />

        <TextView
            android:id="@+id/movie_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/movie_logo_image"
            android:text="Avengers:\nEnd Game" />

        <TextView
            android:id="@+id/movie_genres_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/movie_title_text"
            android:text="Action, Adventure, Fantasy" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_star"
            app:tint="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_text"
            app:layout_constraintEnd_toStartOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/reviews_number_text" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_star"
            app:tint="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_text"
            app:layout_constraintEnd_toStartOf="@+id/imageView23"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="@+id/reviews_number_text" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_star"
            app:tint="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_text"
            app:layout_constraintEnd_toStartOf="@+id/imageView24"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/reviews_number_text" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_star"
            app:tint="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_text"
            app:layout_constraintEnd_toStartOf="@+id/imageView25"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView23"
            app:layout_constraintTop_toTopOf="@+id/reviews_number_text" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_star"
            app:tint="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_text"
            app:layout_constraintEnd_toStartOf="@+id/reviews_number_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/reviews_number_text" />

        <TextView
            android:id="@+id/reviews_number_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@+id/imageView25"
            app:layout_constraintTop_toBottomOf="@id/movie_genres_text"
            android:text="125 reviews" />

        <TextView
            android:id="@+id/storyline_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/reviews_number_text"
            android:text="@string/storyline" />

        <TextView
            android:id="@+id/storyline_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white_transparent"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/storyline_title_text"
            android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos\' actions and restore balance to the universe." />

        <TextView
            android:id="@+id/cast_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/storyline_text"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/cast"/>

        <ImageView
            android:id="@+id/movie_cast_1_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toStartOf="@+id/movie_cast_2_image"
            app:layout_constraintStart_toEndOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/cast_text"
            android:src="@drawable/movie_cast_1"/>
        <ImageView
            android:id="@+id/movie_cast_2_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/movie_cast_1"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toStartOf="@+id/movie_cast_3_image"
            app:layout_constraintStart_toEndOf="@+id/movie_cast_1_image"
            app:layout_constraintTop_toTopOf="@+id/movie_cast_1_image"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:id="@+id/movie_cast_3_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/movie_cast_1"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toStartOf="@id/movie_cast_4_image"
            app:layout_constraintStart_toEndOf="@id/movie_cast_2_image"
            app:layout_constraintTop_toTopOf="@+id/movie_cast_1_image"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:id="@+id/movie_cast_4_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/movie_cast_1"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@+id/movie_cast_3_image"
            app:layout_constraintTop_toTopOf="@+id/movie_cast_1_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_cast_1_image"
            app:layout_constraintStart_toStartOf="@id/movie_cast_1_image"
            app:layout_constraintEnd_toEndOf="@id/movie_cast_1_image"
            android:text="Robert Downey Jr."/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_cast_2_image"
            app:layout_constraintStart_toStartOf="@id/movie_cast_2_image"
            app:layout_constraintEnd_toEndOf="@id/movie_cast_2_image"
            android:text="Chris Evans"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_cast_3_image"
            app:layout_constraintStart_toStartOf="@id/movie_cast_3_image"
            app:layout_constraintEnd_toEndOf="@id/movie_cast_3_image"
            android:text="Mark Ruffalo"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_cast_4_image"
            app:layout_constraintStart_toStartOf="@id/movie_cast_4_image"
            app:layout_constraintEnd_toEndOf="@id/movie_cast_4_image"
            android:text="Chris Hemsworth"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>